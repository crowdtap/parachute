{
  "name":         "parachute",
  "version":      "0.0.1-beta.10",
  "description":  "Simple assets delivery across many applications.",
  "author":       "Jico Baligod <jico@baligod.com>",
  "licenses": [
    {
      "type": "MIT",
      "url":  "http://github.com/crowdtap/parachute/raw/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">=0.8.0"
  },
  "repository": {
    "type": "git",
    "url":  "https://github.com/crowdtap/parachute"
  },
  "dependencies": {
    "colors":    "0.6.0-1",
    "gift":      "0.0.5",
    "glob":      "3.2.3",
    "hogan.js":  "2.0.0",
    "lodash":    "1.0.1",
    "mkdirp":    "0.3.5",
    "ncp":       "0.4.2",
    "nopt":      "2.1.1",
    "rimraf":    "2.1.4"
  },
  "devDependencies": {
    "coffee-script": "1.6.2",
    "expect.js":     "0.2.0",
    "mocha":         "1.8.2",
    "sinon":         "1.7.2",
    "timekeeper":    "0.0.3"
  },
  "main": "lib",
  "bin": {
    "parachute": "bin/parachute"
  },
  "scripts": {
    "compile":  "./node_modules/.bin/coffee -bo . src",
    "pretest":  "bash scripts/prepare_test_repos.sh && rm -rf test/*.js && ./node_modules/.bin/coffee -bo . src",
    "test":     "./node_modules/.bin/mocha --reporter dot --timeout 40000",
    "watch":    "./node_modules/.bin/coffee -wbo . src"
  }
}
